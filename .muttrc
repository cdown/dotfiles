set pgp_decode_command="/usr/bin/gpg --status-fd=2 %?p?--passphrase-fd 0? --no-verbose --quiet --batch --output - %f"
set pgp_verify_command="/usr/bin/gpg --status-fd=2 --no-verbose --quiet --batch --output - --verify %s %f"
set pgp_decrypt_command="/usr/bin/gpg --status-fd=2 %?p?--passphrase-fd 0? --no-verbose --quiet --batch --output - %f"
set pgp_sign_command="/usr/bin/gpg --no-verbose --batch --quiet --output - %?p?--passphrase-fd 0? --armor --detach-sign --textmode %?a?-u %a? %f"
set pgp_clearsign_command="/usr/bin/gpg --no-verbose --batch --quiet --output - %?p?--passphrase-fd 0? --armor --textmode --clearsign %?a?-u %a? %f"
set pgp_encrypt_only_command="pgpewrap /usr/bin/gpg --batch --quiet --no-verbose --output - --encrypt --textmode --armor --always-trust -- -r %r -- %f"
set pgp_encrypt_sign_command="pgpewrap /usr/bin/gpg %?p?--passphrase-fd 0? --batch --quiet --no-verbose --textmode --output - --encrypt --sign %?a?-u %a? --armor --always-trust -- -r %r -- %f"
set pgp_import_command="/usr/bin/gpg --no-verbose --import %f"
set pgp_export_command="/usr/bin/gpg --no-verbose --export --armor %r"
set pgp_verify_key_command="/usr/bin/gpg --verbose --batch --fingerprint --check-sigs %r"
set pgp_list_pubring_command="/usr/bin/gpg --no-verbose --batch --quiet --with-colons --list-keys %r"
set pgp_list_secring_command="/usr/bin/gpg --no-verbose --batch --quiet --with-colons --list-secret-keys %r"
set pgp_good_sign="^\\[GNUPG:\\] GOODSIG"
set pgp_autosign=yes

set from = "chris@chrisdown.name"
set realname = "Chris Down"

set imap_user = "christopher.down.uk@gmail.com"
set imap_idle = yes
set imap_keepalive = 60
set mail_check = 30
set timeout = 60

set folder = "imaps://$imap_user@imap.gmail.com:993"

set smtp_url = "smtp://$imap_user@smtp.gmail.com:587/"

set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"

set header_cache = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates
macro attach s "<save-entry><bol>~/Downloads/<eol>"

auto_view text/html
alternative_order text/plain text/html

set pager_stop
unset record

set editor="vim -c 'set fo=tcrq' -c 'set tw=80'"

ignore *
unignore From: To: Date: Subject: Cc: Bcc:

set move = no

set date_format="!%Y-%m-%d %H:%M"
set index_format="%4C  [%Z]  %D  %-15.15F  %s"

set pgp_sign_as=0xA7CC9B4D
my_hdr X-PGP-Key: http://chrisdown.name/pgp/personal.asc

set sort=reverse-threads
set sort_aux=last-date-received

macro index,pager ,i "<change-folder>=INBOX<enter>" "Go to inbox"
macro index,pager ,a "<change-folder>=[Gmail]/All<quote-char> Mail<enter>" "Go to all mail"
macro index,pager ,d "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"
macro index,pager ,s "<change-folder>=[Gmail]/Sent<quote-char> Mail<enter>" "Go to sent mail"

color attachment brightblack   default
color bold       brightyellow  default
color error      brightred     default
color message    white         default
color normal     white         default
color quoted     magenta       default
color quoted1    cyan          default
color quoted2    green         default
color quoted3    yellow        default
color quoted4    brightmagenta default
color quoted5    brightgreen   default
color quoted6    brightyellow  default
color quoted7    brightcyan    default
color search     red           brightblack
color signature  cyan          default
color tilde      brightblack   default
color tree       white         default
