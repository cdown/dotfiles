set certificate_file = ~/.mutt/certificates
set header_cache = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set alias_file = ~/.mutt/aliases

set edit_headers

alternative_order text/plain text/html
auto_view text/html

set from = "chris@chrisdown.name"
set realname = "Chris Down"
alternates chris@regentmarkets\.com chris@illco\.de christopher\.down@iofc\.org christopher\.?down\.?uk@gmail\.com

source "gpg -q -d ~/.mutt/passwords.gpg |"

set imap_idle
set imap_keepalive = 60
set imap_user = "christopher.down.uk@gmail.com"

set smtp_url = "smtp://$imap_user@smtp.gmail.com:587/"

set folder = "imaps://$imap_user@imap.gmail.com:993"
set mail_check = 30
set spoolfile = "+INBOX"
set timeout = 60
unset move
unset postpone
unset record

ignore *
unignore from: to: cc: date: subject:
unhdr_order *
hdr_order from: to: cc: date: subject:

source /etc/Muttrc.gpg.dist
my_hdr X-PGP-Key: http://chrisdown.name/pgp/personal.asc
set pgp_autosign
set pgp_sign_as = 0xA7CC9B4D

macro attach s "<save-entry><bol>~/Downloads/<eol>"
macro index,pager ,a "<change-folder>=[Gmail]/All<quote-char> Mail<enter>" "Go to all mail"
macro index,pager ,i "<change-folder>=INBOX<enter>" "Go to inbox"
macro index,pager ,s "<change-folder>=[Gmail]/Sent<quote-char> Mail<enter>" "Go to sent mail"

set pager_stop
unset confirmappend
unset mark_old
unset markers

set pipe_decode
set thorough_search

set editor="vim -c 'set fo=tcrq' -c 'set tw=80'"

set date_format="!%Y-%m-%d %H:%M"
set index_format="%4C  [%Z]  %D  %-15.15F  %s"
set sort=reverse-threads
set sort_aux=last-date-received

set uncollapse_jump
set sort_re
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"

bind index gg       first-entry
bind index G        last-entry

bind index R        group-reply
bind index <tab>    sync-mailbox
bind index <space>  collapse-thread

color attachment brightblack   default
color bold       brightyellow  default
color error      brightred     default
color message    white         default
color normal     white         default
color quoted     magenta       default
color quoted1    cyan          default
color quoted2    green         default
color quoted3    yellow        default
color quoted4    brightmagenta default
color quoted5    brightgreen   default
color quoted6    brightyellow  default
color quoted7    brightcyan    default
color search     red           brightblack
color signature  cyan          default
color tilde      brightblack   default
color tree       white         default
