[user]
    name = Chris Down
    email = chris@chrisdown.name
    signingkey = A7CC9B4D
[core]
    excludesfile = /home/chris/.config/git/gitignore_global
[color]
    ui = auto
[alias]
    new = log --pretty=oneline --abbrev-commit ..@{u}
    iron = rebase -p @{u}
    mimic = !git reset --hard @{u} && git clean -dfx
    only = "!git log \"$(git symbolic-ref HEAD)\" --not $(git for-each-ref --format=\"%(refname)\" refs/heads | grep -Fv \"$(git symbolic-ref HEAD)\")"

[push]
    default = current
