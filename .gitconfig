[user]
    name = Chris Down
    email = chris@chrisdown.name
[core]
    excludesfile = ~/.config/git/gitignore_global
[color]
    ui = auto
[push]
    default = current
[merge]
    tool = vimdiff
    conflictstyle = diff3
[rebase]
    autosquash = true
[alias]
    why-ignore = check-ignore -v
[diff "gpg"]
    textconv = gpg --no-tty --decrypt
