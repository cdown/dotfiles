#!/bin/sh

export EDITOR=vim
export LC_COLLATE=C
export PAGER=less
export VISUAL=vim
export PYTHONDONTWRITEBYTECODE=1
export PYTHONSTARTUP="$HOME/.pythonrc"
export BROWSER=google-chrome-stable
export NSS_DEFAULT_DB_TYPE=sql

# If we weren't started by pam_systemd, try to guess so that things like
# systemctl work
if [ -z "$XDG_RUNTIME_DIR" ]; then
    export XDG_RUNTIME_DIR=/run/user/$UID
fi

# Allow $config home, which comes from shell init
# shellcheck disable=SC2154
{
    export PATH="/usr/share/bcc/tools:/opt/chefdk/bin:$config_home/local/bin:$config_home/bin:$config_home/.rbenv/bin:$config_home/.local/bin:$HOME/local/bin:$HOME/bin:$HOME/.rbenv/bin:$HOME/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/opt/android-sdk/platform-tools:/usr/bin/core_perl:/usr/bin/vendor_perl:/usr/local/ittools/arcanist/bin:/usr/texbin:/opt/local/bin:$HOME/.pyenv/bin:$HOME/.cargo/bin"
    export MAILCAPS=$config_home/.config/mailcap/linux:$HOME/.config/mailcap/linux
}

if _running_on_wsl; then
    export LIBGL_ALWAYS_INDIRECT=1
fi

umask 0022
