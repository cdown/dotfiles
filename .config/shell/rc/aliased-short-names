#!/bin/sh

alias coa=create-or-attach-tmux-session
alias so=clean-env
alias udf=update-dotfiles
alias zhsub=fix-chinese-sub-encoding
alias p=ipython
alias u='udf && exec zsh -l'
alias s=sshrc
alias b='sudo intel-brightness'
alias x='s -l root'
alias q='sudo '
alias mtp='sudo simple-mtpfs --device 1'

alias ss='sudo systemctl start'
alias st='sudo systemctl stop'
alias sd='sudo systemctl -n 100 status'

alias us='systemctl --user start'
alias ut='systemctl --user stop'
alias ud='systemctl --user -n 100 status'

m() {
    if [ "$1" = dev ]; then
        # We already have configs here
        mosh "$@"
    else
        moshrc "$@"
    fi
}

g(){
    gdb -q /proc/"${1?}"/exe "$1"
}

# virtualenvwrapper
alias mv2='mkvirtualenv -p python2'
alias mv3='mkvirtualenv -p python3'
alias wo=workon

alias gt=grep-tids
