#!/bin/sh

alias coa=create-or-attach-tmux-session
alias sbdl=dian-download
alias sbls=dian-ls
alias so=clean-env
alias udf=update-dotfiles
alias zhsub=fix-chinese-sub-encoding
alias v=virtualenv-auto
alias p=ipython
alias u='udf && exec zsh -l'
alias s=sshrc
alias b='sudo intel-brightness'
alias x='s -l root'

m() {
    if [ "$1" = dev ]; then
        # We already have configs here
        mosh "$@"
    else
        moshrc "$@"
    fi
}

# virtualenvwrapper
alias mv2='mkvirtualenv -p python2'
alias mv3='mkvirtualenv -p python3'
alias wo=workon

alias gt=grep-tids
