# vim: ft=muttrc

alternative_order text/plain text/html
auto_view text/html

set strict_threads
set sleep_time = 0
set delete
set quit
set pager_stop

bind index Q quit
bind index q noop
bind index,pager p noop
bind index,pager r group-reply
bind pager,attach q exit

bind index g first-entry
bind index G last-entry

macro index L "<limit>all<enter>"
macro attach s "<save-entry><bol>/tmp/<eol>"
macro attach S "<save-entry><bol>~/Downloads/<eol>"
macro attach B "<pipe-message>cat > /tmp/mutt.html; lynx /tmp/mutt.html<enter>"
