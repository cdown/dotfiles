# vim: ft=muttrc

set mailcap_path = `[ "$(uname -s)" == Linux ] && echo ~/.config/mailcap/linux || echo ~/.config/mailcap/mac`
set strict_threads
set sleep_time = 0
set timeout = 20
set delete
set quit
set pager_stop
set fast_reply

bind index Q quit
bind index q noop
bind index x noop
bind index,pager p noop
bind index,pager r group-reply
bind pager,attach q exit

bind index g first-entry
bind index G last-entry

macro index L '<limit>all<enter>'
macro attach s '<save-entry><bol>/tmp/<eol>'
macro attach S '<save-entry><bol>~/Downloads/<eol>'
macro attach B '<pipe-message>cat > /tmp/mutt.html; google-chrome-stable /tmp/mutt.html<enter>'
