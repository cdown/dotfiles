# vim: ft=muttrc

# Arch
source `[ -f /etc/Muttrc.gpg.dist ] && echo /etc/Muttrc.gpg.dist || echo /dev/null`

# Debian
source `[ -f /etc/Muttrc.d/gpg.rc ] && echo /etc/Muttrc.d/gpg.rc || echo /dev/null`

# Mac
source `[ "$(uname -s)" = Darwin ] && echo ~/.config/mutt/mac-pgp || echo /dev/null`

set pgp_use_gpg_agent
set pgp_sign_as = 0xDF8D21B616118070

set pgp_auto_decode

set pgp_autosign

set pgp_replysign
set pgp_replyencrypt
set pgp_replysignencrypted
