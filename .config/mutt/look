ignore      *
unignore    From: To: Cc: Date: Subject:
hdr_order   From: To: Cc: Date: Subject:

set index_format = '%5C  [%Z] [%-4.4c]  %D  %-15.15F  %s'
set date_format  = "%Y-%m-%d %H:%M:%S %Z"

set read_inc = 500

unset mark_old

set status_format  = '%> %?V?Limit: %V | ?%v'
set compose_format = '%> %v'

set display_filter = "sed -r '/^-- ?$/,\$d'"

unset help
unset markers

set sort     = threads
set sort_aux = last-date-received

color attachment brightblack   default
color bold       brightyellow  default
color error      brightred     default
color message    white         default
color normal     white         default
color quoted     magenta       default
color quoted1    cyan          default
color quoted2    green         default
color quoted3    yellow        default
color quoted4    brightmagenta default
color quoted5    brightgreen   default
color quoted6    brightyellow  default
color quoted7    brightcyan    default
color search     red           brightblack
color status     default       default
color signature  cyan          default
color tilde      brightblack   default
color tree       brightblack   default

color index brightblack default "~A"                           # Default
color index brightred   default "~p ~t chris@ !~F !~T !~D"     # New, to me
color index white       default "~p !~t chris@ !~F !~T !~D"    # New, Cc me

color index green       default '~f (zenoss\|alert@(pingdom\|datadog)\|system@pushmon)'
color index red         default '~f (zenoss\|alert@(pingdom\|datadog)\|system@pushmon) !~s (UP\|SUCCESSFUL\|CLEAR\|Recovered)'

color index brightcyan  default "~T"                           # Tagged
color index cyan        default "~F"                           # Flagged
color index blue        default "~D"                           # Deleted
color index brightgreen default "~P !~F !~T !~D"               # From me
