# vim: ft=muttrc

source ~/.config/mutt/mutt-colors-solarized-dark-16.muttrc

ignore *
unignore From: To: Cc: Date: Subject:
unhdr_order *
hdr_order From: To: Cc: Date: Subject:

set index_format = '%5C  [%Z] [%-4.4c]  %D  %-15.15F  %s'
set date_format = '%Y-%m-%d %H:%M:%S %Z'
set reverse_alias

set display_filter = ~/.config/mutt/run-filters

set attribution = '%n writes:'

set read_inc = 500

unset mark_old

set status_format = '%> %?V?Limit: %V | ?%v'
set compose_format = '%> %v'

unset help
unset markers

# Decode attachment filenames
set rfc2047_parameters

set sort = threads
set sort_aux = last-date-received

auto_view text/html
message-hook . 'unalternative_order *; alternative_order text/plain text/html'

# Auto view HTML for these senders, even if they send text/plain, because their
# text/plain e-mails are fucked up.
message-hook '%f force_html' 'unalternative_order *; alternative_order text/html text/plain'
