HISTFILE=$HOME/.zsh_history
SAVEHIST=2500

set -o append_history
set -o histignorealldups
set -o share_history

zstyle ':completion:*:default' list-colors ${(s.:.)LS_COLORS}

bindkey -e
bindkey "^[[3~"  delete-char
bindkey "^[3;5~" delete-char

setopt extendedglob
setopt histappend
setopt no_bang_hist
setopt prompt_subst
