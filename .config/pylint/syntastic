[BASIC]
# Allow test_ functions to have long names
function-rgx=([a-z_][a-z0-9_]{2,30}$|^test_)
method-rgx=([a-z_][a-z0-9_]{2,30}$|^test_)

# Allow dashes in module names
module-rgx=[a-z_-][a-z0-9_-]{2,30}$

# Allow lowercase module variables
const-rgx=(([A-Za-z_][A-Za-z1-9_]*)|(__.*__))$

[MESSAGES CONTROL]
disable=import-error,no-name-in-module,bad-builtin,missing-docstring,multiple-statements,bad-whitespace,protected-access,too-many-locals,too-few-public-methods,too-many-arguments
