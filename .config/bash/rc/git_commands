#!/bin/bash

alias ga='git add'
alias gap='git add -p'
alias gbmbu='git branch -r --merged bugfixes@{u}'
alias gbmmu='git branch -r --merged master@{u}'
alias gc='git commit -v'
alias gca='git commit -av'
alias gcaa='git commit --amend -av'
alias gcl='git clean -dffx'
alias gd='git diff'
alias gdbu='git diff bugfixes@{u}..'
alias gdc='git diff --cached'
alias gdmu='git diff master@{u}..'
alias gfmbu='git fetch -p && git merge --no-ff bugfixes@{u}'
alias gfmmu='git fetch -p && git merge --no-ff master@{u}'
alias gfp='git fetch -p'
alias gfru='git fetch -p && git rebase -p @{u}'
alias gg='git grep'
alias gl='git log'
alias glbu='git log --no-merges bugfixes@{u}..'
alias glmu='git log --no-merges master@{u}..'
alias gp='git push'
alias grhh='git reset --hard HEAD'
alias grhu='git reset --hard @{u}'
alias griu='git rebase -i @{u}'
alias grpu='git rebase -p @{u}'
alias gs='git show'
alias gsl='git stash list'
alias gss='git stash save'
alias gta='git tag -a'
