#!/bin/bash

alias ga='git add'
alias gbmb='git fetch -p && git branch -r --merged bugfixes@{u}'
alias gbmm='git fetch -p && git branch -r --merged master@{u}'
alias gc='git commit -v'
alias gca='git commit -av'
alias gcaa='git commit --amend -av'
alias gdbu='git diff bugfixes@{u}..'
alias gdl='git branch -d'
alias gdmu='git diff master@{u}..'
alias gfp='git fetch -p'
alias gfr='git fetch -p && git rebase -p @{u}'
alias gl='git log'
alias glbu='git log --no-merges bugfixes@{u}..'
alias glmu='git log --no-merges master@{u}..'
alias glnm='git log --no-merges'
alias gmbu='git fetch -p && git merge --no-ff bugfixes@{u}'
alias gmmu='git fetch -p && git merge --no-ff master@{u}'
alias gp='git push -u origin HEAD'
alias grhh='git reset --hard HEAD'
alias grhu='git reset --hard @{u}'
alias griu='git rebase -i @{u}'
alias gru='git rebase -p @{u}'
alias gs='git stash save'
alias gsl='git stash list'
alias gt='git tag -a'

gd() { git branch -d "$1" && git push origin ":$1"; }
gdr() { git push origin ":$1"; }
