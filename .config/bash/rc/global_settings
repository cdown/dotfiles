HISTSIZE=2500

PS1='${USER:=$(id -un)}@${HOSTNAME:=$(hostname)}:$([[ $PWD == $HOME ]] && echo "~" || echo "${PWD##*/}")$(git_prompt)$([[ $(id -u) == 0 ]] && echo "#" || echo \$) '

git_prompt() {
    local branch

    if branch="$(git rev-parse --abbrev-ref HEAD 2>/dev/null)"; then
        printf ':%s' "$branch"
    fi
}
