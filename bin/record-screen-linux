#!/bin/bash

if (( FULLSCREEN )); then
    s=$(xrandr --current | awk '$2 ~ /*/ { print $1 }')
    i=':0.0+0,0'
else
    read -r x y width height geometry id < <(slop -f "%x %y %w %h %g %i")
    maim -g "$geometry" -i "$id"
    s="$width"x"$height"
    i=":0.0+$x,$y"
fi

extra_args=()

(( LOSSLESS )) && extra_args+=(-qp 0 -preset ultrafast)

ffmpeg \
    -f x11grab \
    -r 25 \
    -s "$s" \
    -i "$i" \
    -vcodec libx264 \
    -threads 0 \
    "${extra_args[@]}" \
    "$1"
