#!/bin/bash

: "${EMAIL?}"
: "${NOTMUCH_BASENAME?}"
: "${MAILDIR?}"

NOTMUCH_CONFIG="$HOME/.config/notmuch/$NOTMUCH_BASENAME"
export NOTMUCH_CONFIG

# notmuch relies on some Perl libs
PATH=$(get-path-without-env)
export PATH

# For attachments with a relative path
cd /tmp

while :; do
    mutt
done
