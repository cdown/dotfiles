#!/bin/bash -e

qemu-system-x86_64 \
    -enable-kvm \
    -s \
    -m 2G \
    -smp 4 \
    -nographic \
    -cpu host \
    -net user,hostfwd=tcp::10022-:22 \
    -net nic \
    -kernel ~/git/linux/arch/x86/boot/bzImage \
    -append 'root=/dev/sda1 cgroup_no_v1=all rw console=ttyS0,115200 systemd.log_level=debug' \
    -drive file=$HOME/kernel-dev-archlinux.img,format=raw
