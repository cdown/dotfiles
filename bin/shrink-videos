#!/bin/bash -ex

mkdir -p shrink

for file do
    dir=${file%/*}
    if [[ $dir != "$file" ]]; then
        mkdir -p shrink/"$dir"
    fi
    out=shrink/"${file%.*}.mkv"
    if [[ -f "$out" ]]; then
        printf '%s already exists, skipping\n' "$out" >&2
        continue
    fi
    shrink-video "$file" "$out"
done
