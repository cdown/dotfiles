#!/bin/bash -e

tzs=(
    Current
    America/Los_Angeles
    America/New_York
    Europe/London
    Asia/Tel_Aviv
    Asia/Shanghai
)

max_tz_len() {
    max=0
    for tz in "${tzs[@]}"; do
        cur=${#tz}
        (( cur > max )) && max=$cur
    done
    echo "$max"
}

len=$(max_tz_len)
for tz in "${tzs[@]}"; do
    printf "%${len}s: " "$tz"

    if [[ $tz == Current ]]; then
        unset TZ
    else
        export TZ="$tz"
    fi

    date '+%Y-%m-%d %H:%M'
done
