#!/bin/bash -e

date_fmt="%H:%M"

tzs=(
    Current
    America/Los_Angeles
    America/New_York
    Europe/London
    Asia/Tel_Aviv
    Asia/Singapore
)

max_tz_len() {
    max=0
    for tz in "${tzs[@]}"; do
        cur=${#tz}
        (( cur > max )) && max=$cur
    done
    echo "$max"
}

len=$(max_tz_len)
for tz in "${tzs[@]}"; do
    printf "%${len}s: " "$tz"

    if [[ $tz == Current ]]; then
        date +"$date_fmt"
        echo
    else
        TZ="$tz" date +"$date_fmt"
    fi
done
