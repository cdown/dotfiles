#!/bin/bash -xe

for cmd in nodenv pyenv rbenv; do
    eval "$("$cmd" init -)"
done

cd /

while read -r version; do
    export PYENV_VERSION="$version"
    pipdeptree | grep -P '^\w+' | xargs -d '\n' pip install -U
done < ~/.python-version

npm update -g
gem update
sudo -u makepkg EDITFILES=0 yaourt -Syua
sudo pacdiff
