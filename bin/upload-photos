#!/bin/bash -e

photo_dir=${1?photo_dir required}
session_name=photo-upload
base_cmd='. /usr/bin/virtualenvwrapper.sh && mktmpenv --no-cd -i gsutil'

tmux new-session -d -s "$session_name" \
    "$base_cmd && echo gsutil cp * s3://chrisdown-photos/$photo_dir; read"
tmux split-window -h -t "$session_name:1" \
    "$base_cmd && echo gsutil cp * gs://chris-down-photos/chrisdown-photos/$photo_dir; read"
tmux attach -t "$session_name"
