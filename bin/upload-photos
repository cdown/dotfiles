#!/bin/bash -e

photo_dir=${1?photo_dir required}
session_name=photo-upload

tmux new-session -d -s "$session_name" \
    "PYENV_VERSION=2.7.10 gsutil cp * s3://chrisdown-photos/$photo_dir && echo Done; read"
tmux split-window -h -t "$session_name:1" \
    "PYENV_VERSION=2.7.10 gsutil cp * gs://chris-down-photos/chrisdown-photos/$photo_dir && echo Done; read"
tmux attach -t "$session_name"
