#!/bin/bash -e

if ! [[ $1 ]]; then
    printf 'Usage: %s profile\n' "$0" >&2
    exit 1
fi

case $1 in
    work)
        xrandr --output eDP1 --off
        xrandr --output DP1 --primary --auto
    ;;
    unwork)
        xrandr --output DP1 --off
        xrandr --output eDP1 --primary --auto
    ;;
    *)
        printf 'Unknown profile: %s\n' "$1"
        exit 1
    ;;
esac
