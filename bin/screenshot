#!/bin/bash -e

mkdir -p ~/Screenshots

file=$HOME/Screenshots/$(date +%F_%H%M%S_%N).png

case $1 in
    --select) maim -s "$file" ;;
    --all) maim "$file" ;;
    --focused)
        focused_win=$(xprop -root | awk '/^_NET_ACTIVE_WINDOW/ { print $NF }')
        maim -i "$focused_win" "$file"
    ;;
    *)
        echo 'Must pass an option.'
        exit 1
    ;;
esac

notify-send 'Screenshot taken'

xclip -sel clip <<< "$file"
xclip -sel primary <<< "$file"

printf '%s\n' "$file"
