#!/bin/bash

action=${1?}

processes=(chrome spotify)
services=(bluetooth "netctl-ifplugd@$(get-wired-interface)" systemd-journald)
user_services=(clipmenud pulseaudio xfce4-notifyd mpdscribble fcitx)

case $action in
    on)
        wineserver -k
        for process in "${processes[@]}"; do
            pkill -x "$process"
        done
        sudo brightness 30

    ;;
    off)
        sudo brightness 100
        sudo rfkill unblock all
        pgrep -x mutt || start-mutts
        pgrep -x irssi || start-irssis
        sudo systemctl start "${services[@]}"
        systemctl --user start "${user_services[@]}"
    ;;
    super)
        "$0" on
        tmux kill-server
        sudo netctl stop-all
        sudo rfkill block all
        sudo systemctl stop "${services[@]}"
        systemctl --user stop "${user_services[@]}"
    ;;
esac
