new_window pixel 1
font -*-terminus-medium-r-*-*-12-*-*-*-*-*-*-*u

bar {
    status_command sh -c "while date '+%a %F %T'; do sleep 1; done"
    mode hide
    workspace_buttons no
}

set $mod Mod4

bindsym $mod+Return exec urxvt
bindsym $mod+backslash exec chromium
bindsym $mod+Ctrl+backslash exec chromium --incognito
bindsym Menu exec dmenu_run -fn -*-terminus-medium-r-*-*-12-*-*-*-*-*-*-*u -nb \#000000 -nf \#666666 -sb \#ffffff -sf \#000000
bindsym XF86ScreenSaver exec i3lock -u
bindsym XF86Sleep exec i3lock -u
bindsym Print exec sh -c "mkdir -p /tmp/screenshots && cd /tmp/screenshots && scrot" 

bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

bindsym $mod+p            workspace 1
bindsym $mod+bracketleft  workspace 2
bindsym $mod+bracketright workspace 3
bindsym $mod+l            workspace 4
bindsym $mod+semicolon    workspace 5
bindsym $mod+apostrophe   workspace 6

bindsym $mod+Ctrl+p            move container to workspace 1; workspace 1
bindsym $mod+Ctrl+bracketleft  move container to workspace 2; workspace 2
bindsym $mod+Ctrl+bracketright move container to workspace 3; workspace 3
bindsym $mod+Ctrl+l            move container to workspace 4; workspace 4
bindsym $mod+Ctrl+semicolon    move container to workspace 5; workspace 5
bindsym $mod+Ctrl+apostrophe   move container to workspace 6; workspace 6

bindsym $mod+comma splith
bindsym $mod+period splitv
bindsym $mod+slash fullscreen

bindsym XF86AudioMute        exec --no-startup-id amixer -q sset Master toggle
bindsym $mod+XF86AudioMute   exec --no-startup-id amixer -q sset Speaker toggle
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q sset PCM 4dB-
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q sset PCM 4dB+

bindsym XF86AudioPlay exec --no-startup-id mpc toggle
bindsym XF86AudioStop exec --no-startup-id mpc stop
bindsym XF86AudioPrev exec --no-startup-id mpc prev 
bindsym XF86AudioNext exec --no-startup-id mpc next

bindsym $mod+BackSpace kill
bindsym $mod+r reload
bindsym $mod+Escape exit

exec --no-startup-id nm-applet
exec --no-startup-id parcellite -n
