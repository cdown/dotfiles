alternative_order text/plain text/html
auto_view text/html

set edit_headers
set include
set reply_to

ignore *
unignore from: to: cc: date: subject:
unhdr_order *
hdr_order from: to: cc: date: subject:

macro attach s "<save-entry><bol>~/Downloads/<eol>"
macro index,pager ,a "<change-folder>=[Gmail]/All<quote-char> Mail<enter>" "Go to all mail"
macro index,pager ,i "<change-folder>=INBOX<enter>" "Go to inbox"
macro index,pager ,s "<change-folder>=[Gmail]/Sent<quote-char> Mail<enter>" "Go to sent mail"

macro index m "<enter-command>unset autoedit<enter><mail>"
macro index g "<enter-command>set autoedit<enter><group-reply>"
macro index L "<enter-command>set autoedit<enter><list-reply>"
macro index r "<enter-command>set autoedit<enter><reply>"

set pager_stop
unset confirmappend
unset mark_old
unset markers

set pipe_decode
set thorough_search

set date_format="!%Y-%m-%d %H:%M"
set index_format="%4C  [%Z]  %D  %-15.15F  %s"
set sort=reverse-threads
set sort_aux=last-date-received

set uncollapse_jump
set sort_re

color attachment brightblack   default
color bold       brightyellow  default
color error      brightred     default
color message    white         default
color normal     white         default
color quoted     magenta       default
color quoted1    cyan          default
color quoted2    green         default
color quoted3    yellow        default
color quoted4    brightmagenta default
color quoted5    brightgreen   default
color quoted6    brightyellow  default
color quoted7    brightcyan    default
color search     red           brightblack
color signature  cyan          default
color tilde      brightblack   default
color tree       white         default
